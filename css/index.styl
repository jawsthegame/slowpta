body
  background-color  #333
  font-family       'Aldrich', sans-serif

.title
  position    relative
  top         20px
  text-align  center
  font-size   64px
  color       #E88484

.subtitle
  position    relative
  top         16px
  text-align  center
  font-size   28px
  color       #82ABED

#main-content
  position      absolute
  top           140px
  left          50%
  margin-left   -400px
  width         800px

#map-canvas
  margin:   0
  padding:  0
  width:    100%
  height:   680px

a
  text-decoration none
  color           #5BD1E3

.hidden
  display none

h2
  font-size   18px
  color       #DDD

  &#back-link
    text-align  right
    width       100%

  &#route-info
    text-align  center
    width       100%

table#routes

  font-size       16px
  color           #DDD
  border-collapse collapse
  width           100%

  td
    width         140px
    border-bottom 1px solid #555
    padding       4px 0

    &:first-child
      padding-left  10px

  tr
    &:first-child
      td
        border-top    1px solid #555

@media only screen and (min-device-width: 320px) and (max-device-width: 568px)

  .title
    font-size 24px
    top       3px

  .subtitle
    font-size 12px
    top       5px

  #main-content
    width       300px
    margin-left -150px
    top         50px

  #map-canvas
    height 300px

  h2
    font-size 12px

  table#routes
    font-size 12px
