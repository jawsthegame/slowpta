body
  background-color  #333
  font-family       'Aldrich', sans-serif

.title
  position    relative
  top         24px
  text-align  center
  font-size   72px
  color       #E88484

.subtitle
  position    relative
  top         20px
  text-align  center
  font-size   32px
  color       #82ABED

#main-content
  position      absolute
  top           180px
  left          50%
  margin-left   -400px
  width         800px

#map-canvas
  margin:   0
  padding:  0
  width:    100%
  height:   680px

@media only screen and (min-device-width: 320px) and (max-device-width: 568px)

  .title
    font-size 28px
    top       5px

  .subtitle
    font-size 14px
    top       10px

  #main-content
    width       300px
    margin-left -150px
    top         70px

  #map-canvas
    height 300px
